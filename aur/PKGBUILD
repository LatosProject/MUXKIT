# Maintainer: LatosProject <https://github.com/LatosProject>
pkgname=muxkit
pkgver=0.4.3
pkgrel=1
pkgdesc="Lightweight terminal multiplexer written in C"
arch=('x86_64' 'aarch64')
url="https://github.com/LatosProject/muxkit"
license=('MIT')
depends=('glibc')
makedepends=('cmake' 'gcc')
source=("$pkgname-$pkgver.tar.gz::https://github.com/LatosProject/muxkit/archive/refs/tags/v$pkgver.tar.gz")
# sha256sums=('PLACEHOLDER') # Update with actual sha256 after release
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
    cmake -B build -S . \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
    cmake --build build
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 "build/muxkit" "$pkgdir/usr/bin/muxkit"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
